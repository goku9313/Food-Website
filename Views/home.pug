    .extra-container
        #plans.part-five
            -let count=3;
            for plan in plans
                if(plan.price>30)
                    -count--;
                    .price-container
                        p.header #{plan.name}
                        p.text1
                            span.price #{plan.price}$
                            | /month
                        p.text2 That's only #{plan.price/plan.duration}$ per meal
                        hr
                        ul.list3
                            li
                                span.tick ✔
                                |  #{plan.duration} meal every month
                            li
                                span.tick ✔
                                |  Order 24/7
                            li
                                span.tick ✔
                                |  Access to newest creations
                            li
                                span.tick ✔
                                |  Free delivery
                        hr
                        .hungry I'm hungry
                    if(count==0)
                        -break;
        .view-all-plans
            a(href="/plans" class="plans-link") View all Plans
    #contact.part-six
        img.gif(src='./images/sending.gif' alt='sending GIF')
        form.form(action='')
            label.field(for='name')
                p.text3 Name
                input#name.input(type='text' placeholder='Name' required='')
            label.field(for='email')
                p.text3 Email
                input#email.input(type='text' placeholder='Email' required='')
            label.field(for='sources')
                p.text3 How did you find us ?
                select#sources.input
                    option.find-options(value='Friends') Friends
                    option.find-options(value='Family') Family
                    option.find-options(value='Advertisement') Advertisement
            label.field(for='para')
                p.text3 Drop us a line
                textarea#para.input(style='height: 6rem;' placeholder='Your Message' required='')
            label(for='#terms')
                input#terms(type='checkbox' required='')
                p.checker
                    | I have read and agree with all the Privacy Policy and Terms
                    | Conditions.
            input.submit(type='submit')
    script(src='/js/1st.js' defer='')